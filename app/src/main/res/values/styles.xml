<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="Widget.AppCompat.Spinner.EyeSeeSpinner">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="EyeSeeTheme" parent="Theme.AppCompat.Light">
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="displayOptions">useLogo|showHome|homeAsUp|showTitle</item>
        <item name="logo">@drawable/qualityapp_logo</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="LoginScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/dark_navy_blue</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="EyeSeeTextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="EyeSeeTextMedium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="EyeSeeTextLarge">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="EyeSeeTextExtra">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="EyeSeeTheme.observation">
    </style>

    <style name="EyeSeeTheme.observation.valueTitle">
        <item name="android:layout_marginRight">@dimen/padding_plan_action_title_left</item>
        <item name="android:background">@color/new_blue</item>
        <item name="android:paddingBottom">@dimen/margin_feedback_top_bottom_radiobutton</item>
        <item name="android:paddingLeft">@dimen/margin_lateral_feedback_radiobutton</item>
        <item name="android:paddingTop">@dimen/margin_feedback_top_bottom_radiobutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EyeSeeTheme.observation.valueActionTitle" parent="EyeSeeTheme.observation.valueTitle">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="EyeSeeTheme.Monitoring">
    </style>

    <style name="EyeSeeTheme.Monitoring.ActionsDialog">
    </style>

    <style name="EyeSeeTheme.Monitoring.ActionsDialog.ActionText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EyeSeeTheme.Dialog">
    </style>

    <style name="EyeSeeTheme.Dialog.Button">
        <item name="android:background">@drawable/background_dialog_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EyeSeeTheme.Dialog.OrgUnitText">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="font_name">@string/font_name_medium</item>
        <item name="tDimension">@string/font_size_level4</item>
    </style>

    <style name="EyeSeeTheme.Dialog.ProgramText">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="font_name">@string/font_name_regular</item>
        <item name="tDimension">@string/font_size_level4</item>
    </style>
</resources>
