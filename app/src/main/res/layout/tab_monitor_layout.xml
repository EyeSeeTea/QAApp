<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_monitor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.eyeseetea.malariacare.views.filters.OrgUnitProgramFilterView
        android:id="@+id/monitor_org_unit_program_filter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/dashboard_charts_container"
        android:layout_below="@id/monitor_org_unit_program_filter_view">
    </FrameLayout>

    <ImageButton
        android:id="@+id/back_to_monitoring_by_actions_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"/>
</RelativeLayout>