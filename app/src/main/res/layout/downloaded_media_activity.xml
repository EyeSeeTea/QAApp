    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_button_text"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:weightSum="1">

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:gravity="center" />

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.6"
            android:text="@string/header_filename_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/condensed_font_name" />

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.3"
            android:autoText="false"
            android:text="@string/header_size_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/condensed_font_name" />

    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/downloaded_media_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:padding="4dp" />

</LinearLayout>